
.videolistleft {
	height: 150px;
	margin-left: 10px;
	color: aliceblue;
	width: 120px;
}
.author {
	height: 35px;
	line-height: 35px;
	font-size: 15px;
}
.title1 {
	line-height: 15px;
	font-size: 12px;
	width: 100%;
}
.box {
	width: 100px;
	overflow: hidden;
}
.music {
	height: 35px;
	line-height: 35px;
	font-size: 12px;
	width: 140px;
	-webkit-animation: music 4s linear 0.2s infinite;
	        animation: music 4s linear 0.2s infinite;
}
@-webkit-keyframes music {
0% {
		-webkit-transform: translate3d(80%, 0, 0);
		        transform: translate3d(80%, 0, 0);
}
100% {
		-webkit-transform: translate3d(-80%, 0, 0);
		        transform: translate3d(-80%, 0, 0);
}
}
@keyframes music {
0% {
		-webkit-transform: translate3d(80%, 0, 0);
		        transform: translate3d(80%, 0, 0);
}
100% {
		-webkit-transform: translate3d(-80%, 0, 0);
		        transform: translate3d(-80%, 0, 0);
}
}

