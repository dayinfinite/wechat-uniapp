
.img {
	height: 50px;
	width: 50px;
	border-radius: 50%;
}
.listright {
	width: 50px;
	margin: 0 auto;
}
.author-img {
	height: 50px;
	width: 50px;
	border-radius: 50%;
	border: 2px solid aliceblue;
	position: relative;
}
.right-box {
	width: 50px;
	height: 40px;
	margin-top: 13px;
	text-align: center;
	line-height: 40px;
	color: aliceblue;
	font-size: 35px;
}
.number {
	font-size: 10px;
	text-align: center;
	color: aliceblue;
}
.around {
	margin-top: 15px;
	-webkit-animation: rotate 1.5s linear 0.2s infinite;
	        animation: rotate 1.5s linear 0.2s infinite;
	height: 50px;
	width: 50px;
}
.add {
	width: 18px;
	height: 18px;
	border-radius: 50%;
	background-color: red;
	position: absolute;
	bottom: -9px;
	left: 16px;
	text-align: center;
	line-height: 18px;
	color: aliceblue;
	font-size: 10px;
}
@-webkit-keyframes rotate {
0% {
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100% {
		-webkit-transform: rotate(350deg);
		        transform: rotate(350deg);
}
}
@keyframes rotate {
0% {
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100% {
		-webkit-transform: rotate(350deg);
		        transform: rotate(350deg);
}
}

